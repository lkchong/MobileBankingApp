<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fyp.mobilebankingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SettingActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="com.fyp.mobilebankingapp.setting" />
            </intent-filter>
        </activity>

        <activity android:name=".AccountSelectionActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="com.fyp.mobilebankingapp.accountselection" />
            </intent-filter>
        </activity>

        <activity android:name=".AccountDetailsActivity"
            android:launchMode="singleInstance"/>

        <activity android:name=".TransferPageMain"
            android:launchMode="singleInstance"/>

        <activity android:name=".TransferToOwnAcc"
            android:launchMode="singleInstance"/>

        <activity android:name=".TransferToOtherAcc"
            android:launchMode="singleInstance"/>

        <activity android:name=".NewTransferPayee"
            android:launchMode="singleInstance"/>

        <activity android:name=".TransferSummary"
            android:launchMode="singleInstance"/>

        <activity android:name=".BillPayment"
            android:launchMode="singleInstance"/>

        <activity android:name=".NewBillPaymentPayee"
            android:launchMode="singleInstance"/>

        <activity android:name=".BillPaymentSummary"
            android:launchMode="singleInstance"/>

        <activity android:name=".ReportPage"
            android:launchMode="singleInstance"/>

        <activity android:name=".CustomerFeedback"
            android:launchMode="singleInstance"/>

    </application>

</manifest>